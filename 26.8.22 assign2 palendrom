#include<stdio.h>
void main()
{
 char s[10];
 int i=0,len=0,j;
 printf("enter string");
 gets(s);
 while(s[i]!='\0')
 {
   len++;
   i++;
 }
 i=0; 
 j=len-1;
 while(i<=len/2)
 {  
   if(s[i]==s[j])
   {
     i++;
     j--;
   }
   else
   break;
}
   if(i>=j)
   printf("palendrom");
   else
   printf("not palendrom");
}
  


out put
enter string  madam
palendrom
